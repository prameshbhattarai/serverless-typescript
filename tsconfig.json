{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "es2018",
      "dom",
      "esnext"
    ],
    "types": [
      "node"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es2018"
  },
  "include": [
    "app/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules"
  ]
}
